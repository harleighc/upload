<p id="notice"><%= notice %></p>

<h1>Listing Companies</h1>

<div class ="media">
     <div class= "media-body">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Manager</th>
      <th>Status</th>
      <th>Terms</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.manager %></td>
        <td><%= company.status %></td>
        <td><%= company.terms %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    
        
        <div class="btn-group rull-right right-nav">
        <button type="button" class = "btn btn-mini drop-downtoggle" data-toggle="dropdown">
          <span class="carret"></span>
          <span class="sr-only">Admin</span>


     </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "Invoices", invoices_path %></li>
            <li><%= link_to "Employees", employees_path %></li>
            <li><%= link_to "Companies", companies_path %></li>
          </ul>
        </div>
      
       
       </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<br>






<h3>Import Companies</h3>
<%= form_tag import_companies_path, multipart: true do %>
<%= file_field_tag :file %>
<%= submit_tag "Import Companies", class: 'btn btn-default'%>
<% end %>

<h3>Download File</h3>
<%= link_to "Report", companies_path(format: "csv"), class: 'btn btn-default' %>


<%= link_to 'New Company', new_company_path %>
